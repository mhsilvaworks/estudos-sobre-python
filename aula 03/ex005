n1 = float ( input (' Digite um vallor : '))
n2 = float ( input (' Digite outro valor : '))
s = n1 + n2
m = n1 * n2
d = n1 / n2
di = n1 // n2
e = n1 ** n2
print ('A soma é {} e a multiplicação é {} e a divisão é {:.3f}'.format(s, m, d) )
print ('A divisão inteira é {} e a potência é {}'.format(di, e))